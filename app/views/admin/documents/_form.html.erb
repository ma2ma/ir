<%= form_for document,url: admin_folder_documents_path(document.folder),html: {role: "form",class: "form_w_val",:multipart => true}  do |f| %>

<div class="form-group">
	<%= f.button "保存", class: "btn btn-success btn-lg",onclick: "if($(this).closest('form').valid() == false){return false;}" %>
	<%= f.button "删除", class: "btn btn-danger btn-lg" %>
</div>
<div class="form-group">
	<%= f.text_field :title,class: "form-control input-lg",placeholder: "文档题目", 'check-type' => "required", 'required-message' => "请填写文档题目。", maxlength: "30" %>
</div>

<div class="box-group" id="accordion">
	<div class="panel box box-primary">
		<div class="box-header">
			<h4 class="box-title">
				<a data-toggle="collapse" data-parent="#accordion" href="#add_document_content">
					文档内容
				</a>
			</h4>
		</div>
		<div id="add_document_content" class="panel-collapse collapse in">
			<div class="box-body">
				<div class="form-group">
					<%= f.text_field :content_have_attr, class: 'summernote form-control' %>
				</div>
			</div>
		</div>
	</div>
	<div class="panel box box-success">
		<div class="box-header">
			<h4 class="box-title">
				<a data-toggle="collapse" data-parent="#accordion" href="#add_document_property">
					文档属性
				</a>
			</h4>
		</div>
		<div id="add_document_property" class="panel-collapse collapse">
			<div class="box-body">
				<%= render partial: "admin/documents/form_property_list", locals: {document: document} %>
				<div class="form-group">
					<%= f.button "保存", class: "btn btn-success btn-lg",onclick: "if($(this).closest('form').valid() == false){return false;}" %>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>