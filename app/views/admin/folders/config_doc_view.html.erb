<% provide(:title, "配置:"+@folder.name) %>
<% provide(:page_name, "配置:"+@folder.name) %>
<% provide(:page_summary, "配置目录中文档的默认视图") %>
<%= render partial: 'shared/config_navbar',locals: {folder: @folder} %>
<%= config_tab(2) %>
<div class="row">
	<div class="col-md-12">
		<%= form_for @folder,url: update_doc_view_admin_folder_path(@folder),method: 'put',html: {role: "form",class: "form_w_val"}  do |f| %>
		<div class="box box-solid box-warning">
			<div class="box-header">
			</div>
			<div class="box-body">
				<div class="form-group">
					<%= f.text_field :doc_default_content, class: 'summernote form-control' %>
				</div>
				<div class="form-group">
					<%= f.button "保存", class: "btn btn-success  btn-block btn-flat  btn-lg" %>
				</div>
			</div>
		</div>
		
		<% end %>
	</div>
	<%= render partial: "admin/folders/select_property_list", locals: {folder: @folder} %>
</div>