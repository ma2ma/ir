<% provide(:title, '新建目录') %>
<% provide(:page_name, '新建目录') %>
<% provide(:page_summary, '新建目录及管理目录集合') %>
<div class="row">
	<div class="col-md-12">
		<div class="box box-primary">
			<div class="box-header">
				<h3 class="box-title">新建目录</h3>
			</div><!-- /.box-header -->
			<%= form_for @folder, url: user_admin_folders_path(@user.loginname), html: {role: "form"} do |f| %>
				<div class="box-body">
					<div class="form-group">
						<label for="add_folder_name">目录名(必填)</label>
						<%= f.text_field :name,class: "form-control",id: "add_folder_name", placeholder: "我的目录", required: "" %>
					</div>

					<div class="form-group">
						<label for="add_folder_type">目录类型(必填)</label>
							<%= f.collection_select :folder_type, FolderType.all, :id, :name, {},{class: "form-control select2",id:"add_folder_type"} %>
					</div>

					<div class="form-group">
						<label for="add_folder_group">目录集</label>
							<input type='hidden' id='add_folder_group' class='form-control'/>
							<input type='hidden' id='add_folder_group_data' value='<%= @folder_group_json %>'/>


					</div>

					<div class="form-group">
						<label for="add_folder_des">目录说明</label>
							<%= f.text_area :description,class: "form-control",id: "add_folder_des", placeholder: "简单介绍一些吧" %>
					</div>
					<div class="box-footer">
						<%= f.button "新建目录", class: "btn btn-primary" %>
					</div>
				</div>
			<% end %>
			
		</div>
	</div>
</div>