<% provide(:title, '用于登录') %>
<% provide(:bgclass, 'bg-black') %>
<div class="form-box" id="login-box">
  <div class="header"><%=t("common.login") %></div>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class ="body bg-gray">
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.email_field :email, :autofocus => true, :placeholder => '电子邮件',:class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password,:placeholder => '密码',:class => 'form-control' %>
    </div>          
    <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %> <%= t("common.remember_me") %>
    </div>
    <% end -%>
  </div>
  <div class="footer">                                                               
    <!-- <button type="submit" class="btn bg-olive btn-block">Sign me in</button>  --> 
    <%=f.submit t("common.login"), class: "btn bg-olive btn-block" %>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>
  <%= render "shared/social_network_login" %>
</div>
