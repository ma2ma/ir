<li class="dropdown messages-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-group "></i>
        <span class="label label-info" id="head_group_message_num"><%= @all_count_small %></span>
    </a>
    <ul class="dropdown-menu">
        <li class="header">您有<code id="head_group_message_num2"><%= @all_count %></code> 条最新消息</li>
        <li>
            <!-- inner menu: contains the actual data -->
            <ul class="menu" id="ul_head_group_message">
                <% @unread_message.each do |m| %>
                <li id="groupmessageid-<%= m['group']._id.to_s %>">
                  <a href="/admin/groups/<%= m['group']._id.to_s %>">
                      <div class="pull-left">
                          <img src="<%= m['group'].avatar_url('normal') %>" alt="user image" class="img-circle"/>

                      </div>
                      <h4>
                          <%= m['group'].name %>
                          <small class="badge bg-green"><%= m['mes_num'] %></small>
                          <small class="badge bg-yellow"><i class="fa fa-clock-o"></i><%= distance_of_time_in_words_to_now(m['last_mes'].created_at) %></small>
                      </h4>
                      <p><code><%= m['last_mes'].from.username %></code><%= truncate(m['last_mes'].content, :length => 10) %></p>
                  </a>
                </li>
                <% end %>
            </ul>
        </li>
        <li class="footer"><%= link_to "全部信息设为已读", read_all_user_admin_groups_path(@user.loginname) %></li>
    </ul>
</li>